<Window x:Class="practice_4.AddForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practice_4"
        mc:Ignorable="d"
        Title="Добавление обуви" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Название модели:" Margin="0,0,0,5"/>
            <TextBox x:Name="ModelTextBox" TabIndex="1"/>
            <TextBlock Text="Производитель:" Margin="0,10,0,5"/>
            <TextBox x:Name="MakerTextBox" TabIndex="2"/>
            <TextBlock Text="Размер:" Margin="0,10,0,5"/>
            <TextBox x:Name="SizeTextBox" TabIndex="3"/>
            <TextBlock Text="Количество:" Margin="0,10,0,5"/>
            <TextBox x:Name="AmountTextBox" TabIndex="4"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:Name="addButton" Click="AddButton_Click" Content="Добавить" Margin="0,0,10,0" MinWidth="100" MinHeight="30" TabIndex="5" />
                <Button x:Name="exitButton" Click="ExitButton_Click" Content="Выход" MinWidth="100" MinHeight="31" TabIndex="6" />
            </StackPanel>
        </StackPanel>

    </Grid>
</Window>
